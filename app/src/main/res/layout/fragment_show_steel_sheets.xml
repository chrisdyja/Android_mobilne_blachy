<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    tools:context=".View.ShowSteelSheetsFragment">

    <RelativeLayout
        android:id="@+id/rlHeader_fragment_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lvSteelSheets_fragment_show">

        <EditText
            android:id="@+id/edtSteelSheetBarcode_fragment_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="@string/edtSteelSheetBarcodeHint_fragment_show"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            />
    </RelativeLayout>


    <ListView
        android:id="@+id/lvSteelSheets_fragment_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop = "20dp"
        android:layout_marginBottom="20dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf = "@id/rlHeader_fragment_show"
        app:layout_constraintBottom_toTopOf="@id/rlFooter_fragment_show"

        />

    <RelativeLayout
        android:id="@+id/rlFooter_fragment_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"

        app:layout_constraintTop_toBottomOf="@id/lvSteelSheets_fragment_show"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnBack_fragment_show"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/btnBackText_fragment_show"
            android:textSize="20dp"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:background="@drawable/btn_rounded_corners"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>