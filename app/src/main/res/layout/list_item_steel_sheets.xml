<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSteelSheetId_list_item"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textAlignment="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llNameAndBarcodeGroup_list_item"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:foregroundGravity="left"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvSteelSheetId_list_item"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tvSteelSheetBarcode_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_info_30dp"
            android:drawablePadding="10dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvSteelSheetLocation_list_item"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvSteelSheetLocation_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_store_30dp"
            android:drawablePadding="10dp"

            app:layout_constraintTop_toBottomOf="@id/tvSteelSheetBarcode_list_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>